doctype 5
html(lang="es")
  head
      meta(charset="utf-8")
      title planetAnonimo
      link(rel="shortcut icon", href="/images/ICO.bmp")
      script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js")
      script(src="/javascripts/modernizr.js")
      script(src="/javascripts/loginFlotante.js")
      link(rel="stylesheet", href="/stylesheets/style.css")
    // El PlanetAnonimo tendra, preguntas anonimas, chat anonimo, llamadas anonimas, video anonimo 
  body
   #global
     header
       #headerCenter
         #logo
         #searchDiv
           input#searchInput(type='text', placeholder='Busca un usuario')
         if (user == 'undefined')
          input.entrar(type='button', name='login', value='Logueate!')
          #sign_box
            form(method='post')
              label.loginLabel
                | Usuario
                input.loginInput(type='text', name='loginUser', required='required')
              label.loginLabel
                | Contraseña 
                input.loginInput(type='password', name='loginPass', required='required')
              #iniciarSesionDiv
                input.inicioSubmit(type='submit', value=' Iniciar Sesion ')
         else
            p hola
     nav
       h3#registrate Registrate!
       .o -Conecta con-
       #registroExterno
         #facebook(onclick='location.href=\'http://www.planetanonimo.eshost.es/\'')
         #twitter(onclick='location.href=\'http://www.planetanonimo.eshost.es/\'')
       .o
         | -o-
       form(action='/registro', method='post', name='registro')
         table#registro
           tr
             td#registroTd(colspan='100') Introduce tus datos
           tr
             td
               | Usuario
             td
               input.registro(type='text', name='registroUser', required='required', required title="El nombre es necesario para registrarse")
           tr
             td
               | Contraseña
             td
               input.registro(type='password', name='registroPass', required='required', required title="Una contraseña es necesaria para el registro" )
           tr
             td
               | Email
             td
               input.registro(type='email', name='registroEmail', required='required', required title="El email es necesario para registrarse")
           tr 
             td.submit(colspan='100')
               input.registroSubmit(type='submit', value='Registrate')
      #contenido
