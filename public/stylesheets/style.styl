html, body
  width: 100%
  height: 100%
  padding: 0px
  margin: 0px
  background: linear-gradient(to bottom,  rgba(165,211,210,1) 0%,rgba(165,211,210,0.99) 1%,rgba(210,233,224,0.5) 82%,rgba(218,237,226,0.5) 96%)
  cursor: default
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
h1,h2,h3,h4
  color: #174C5B
  text-align: center

div#global
  width: 980px
  height: 700px
  margin: 0 auto 0 auto

header
  left: 0
  top: 0
  width: 100%
  height: 45px
  background-color: #0F3D48
  position: fixed
  display: block
  float: none
  border-bottom-left-radius: 50px
  border-bottom-right-radius: 50px
  box-shadow: 0px 5px 3px #174C5B
  z-index: 1

div#headerCenter
  display: block
  position: relative
  width: 980px
  height: 45px
  margin-top: 0px
  margin-bottom: 0px
  margin-left: auto
  margin-right: auto
  padding: 0

div#logo
  float: left
  width: 289px
  height: 60px
  position: relative
  display: inline
  background-image: url("/images/logo.png")
  background-repeat: no-repeat
  left: -9.7px
  margin-left: 11.5px

input#searchInput
  width: 200px
  height: 20px
  border-radius: 5px
  border: none
  padding: 4px
  box-shadow: inset 0 2px 10px rgba(0,0,0,.5)

input#searchInput:active,input#searchInput:hover,input#searchInput:focus
  outline: 0px

div#searchDiv
  width: 200px
  height: 20px
  top: 9px
  position: relative
  margin-right: auto
  margin-left: auto

input.entrar
  text-align: center
  float: right
  position: absolute
  top: 11.5px
  left: 880px
  margin-right: -11.5px
  color: #174C5B
  height: 25px
  width: 80px
  background-color: #DAEDE2
  border-radius: 5px
  border: none
  font-weight: bold

input.entrar:active

input.entrar:hover
  background-color: #D6FAFF
  cursor: pointer

div#sign_box
  width: 170px
  height: auto
  margin: 0 auto 0 auto
  background-color: #C7E4DE
  display: none
  position: fixed
  top: 11.5px
  left: 59%
  padding: 10px
  border-radius: 6px
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size: 18px
  color: black
  border: 10px solid rgba(0, 0, 0, .5)
  -webkit-background-clip: padding-box
  background-clip: padding-box

input.loginInput
  border-radius: 6px
  border-width: 1px
  border-style: solid
  padding: 5px
  box-shadow: inset 0 1px 5px rgba(0,0,0,.5)

input.loginInput:focus
  border-radius: 6px
  border-color: #000
  border-width: 1px
  border-style: solid
  outline: 0px

label.loginLabel
  color: #174C5B
  margin-left: 5px

div#iniciarSesionDiv
  height: auto
  width: auto

input.inicioSubmit
  text-align: center
  color: #174C5B
  font-size: 18px
  text-decoration: solid
  display: block
  border-radius: 5px
  border: 1px solid #D6FAFF
  box-shadow: none 10px 10px rgba(0,0,0,.5)
  height: auto
  width: auto
  margin-left: auto
  margin-right: auto
  margin-top: 5px
  padding: 2px
  cursor: pointer

nav
  float: left
  height: 100%
  width: 320px
  color: #000
  margin: 0px 5px 0px 5px

h3#registrate
  margin: 145px auto 5px auto
  text-align: center
  color: #174C5B

div#registroExterno
  width: 160px
  height: 71px
  margin: 5px auto 5px auto

div#facebook
  display: block
  position: static
  width: 71px
  height: 71px
  float: left
  margin: 0px auto 0px auto
  background-image: url("/images/facebook.png")
  background-repeat: no-repeat
  cursor: pointer
  box-shadow: 0px 0px 30px #D6FAFF

div#twitter
  box-shadow: 0px 0px 30px #D6FAFF
  float: right
  display: block
  position: static
  width: 71px
  height: 71px
  margin: 0px auto 0px auto
  background-image: url("/images/twitter.png")
  background-repeat: no-repeat
  cursor: pointer

div.o
  width: 100%
  text-align: center
  color: #DEEFF9
  margin: 0px auto 0px auto

#registro
  color: #174C5B
  width: 300px
  height: 200px
  border-radius: 6px
  box-shadow: 0px 0px 30px #D6FAFF
  margin: auto auto auto auto
  padding: 15px

td#registroTd
  text-align: center
  font-size: 20px

input.registro
  border-radius: 5px
  border: none
  height: 20px
  margin: 5px
  padding: 3px
  box-shadow: inset 0 1px 10px rgba(0,0,0,.5)
  outline: 0px

td.submit
  height: 100%
  width: 100%

input.registroSubmit
  text-align: center
  color: #174C5B
  font-size: 18px
  text-decoration: solid
  display: block
  border-radius: 5px
  border: 1px solid #D6FAFF
  box-shadow: none 10px 10px rgba(0,0,0,.5)
  height: auto
  width: 50%
  margin-left: auto
  margin-right: auto
  padding: 5px
  cursor: pointer

hr
  position: static
  top: 0px
  left: 0px
  margin-top: 72px
  height: 600px
  float: left
  background-color: rgb(127, 0, 0)
  border-radius: 50px 50px

section
  position: absolute
  height: auto
  width: 654px
  margin: 35px auto 0px 333px
  z-index: -1

footer
  width: 100%
  height: 45px
  display: block
  padding: 0
  margin: 0

div#footerCenter
  display: block
  width: 980px
  height: 45px
  margin-top: 0
  margin-bottom: 0
  margin-left: auto
  margin-right: auto
  padding: 0
  text-align: center


